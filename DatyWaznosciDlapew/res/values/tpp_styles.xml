<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TTPActionBarStyle" parent="Widget.Sherlock.ActionBar">   
        
        <!-- below android 3.x -->
        <item name="background">@color/action_bar_background</item>
        <item name="backgroundStacked">@drawable/abs__ab_stacked_solid_light_holo</item>
        <item name="backgroundSplit">@drawable/abs__ab_bottom_solid_light_holo</item>
        <item name="titleTextStyle">@style/TPP.ActionBar.TextAppearance</item>
        <item name="subtitleTextStyle">@style/TPP.ActionBar.TextAppearance</item>
        <item name="divider">?attr/dividerVertical</item>
        <item name="progressBarStyle">@style/Widget.Sherlock.Light.ProgressBar.Horizontal</item>
        <item name="indeterminateProgressStyle">@style/Widget.Sherlock.Light.ProgressBar</item>
        <item name="progressBarPadding">32dip</item>
        <item name="itemPadding">8dip</item>
        
        <!-- android 3.x or greater -->
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:backgroundStacked">@drawable/abs__ab_stacked_solid_light_holo</item>
        <item name="android:backgroundSplit">@drawable/abs__ab_bottom_solid_light_holo</item>
        <item name="android:titleTextStyle">@style/TPP.ActionBar.TextAppearance</item>
        <item name="android:subtitleTextStyle">@style/TPP.ActionBar.TextAppearance</item>
        <item name="android:divider">?attr/dividerVertical</item>
        <item name="android:progressBarStyle">@style/Widget.Sherlock.Light.ProgressBar.Horizontal</item>
        <item name="android:indeterminateProgressStyle">@style/Widget.Sherlock.Light.ProgressBar</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item>
        
    </style>
    
    <style name="TPP.Spinner.DropDown.ActionBar" parent="TPP.Holo.Spinner">
        <item name="android:background">@color/action_bar_background</item>
    </style>
    
    <style name="TPP.Holo.Spinner" parent="Widget">
        <item name="android:dropDownSelector">@drawable/abs__list_selector_holo_dark</item>
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TPP.ListPopupWindow" parent="Widget">
        <item name="android:dropDownSelector">@drawable/abs__list_selector_holo_light</item>
        <item name="android:popupBackground">@color/dropdown</item>
        <item name="android:background">@color/dropdown</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>
    
    <style name="TPP.PopupMenu" parent="TPP.ListPopupWindow">
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="TPP.Spinner.ListView.DropDown" parent="Sherlock.__Widget.Holo.ListView">
        <item name="android:divider">#ffffff</item>
        <item name="android:listSelector">@drawable/abs__list_selector_holo_light</item>
        <item name="android:background">@color/dropdown</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="TPP.ActionOverflowDropDownText" parent="TPP.ActionBar.TextAppearance">
    	<item name="android:gravity">center</item>
    	<item name="android:textSize">@dimen/action_bar_font_size</item>
    	<item name="android:actionMenuTextAppearance">@style/TPP.ActionBar.Menu.TextAppearance</item>
    	 <item name="actionMenuTextAppearance">@style/TPP.ActionBar.Menu.TextAppearance</item>
	</style>
    
    <style name="TPP.ActionBar.Menu.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/action_bar_font_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">@bool/abs__config_actionMenuItemAllCaps</item>
    </style>

    <style name="TPP.ActionBar.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/action_bar_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.Menu.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/menu_font_size</item>
        <item name="android:textColor">@color/menu_text_view</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.Large.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_large_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.XLarge.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_xlarge_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.Normal.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.Medium.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_medium_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.Small.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_small_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TPP.XSmall.TextAppearance" parent="Widget">
        <item name="android:textSize">@dimen/text_view_xsmall_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>