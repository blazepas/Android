        <item name="android:actionBarStyle">@style/TTPActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_background</item>
        <item name="android:dropDownListViewStyle">@style/TPP.Spinner.ListView.DropDown</item>
