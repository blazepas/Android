<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Sherlock.TTP" parent="Sherlock.__Theme.Light">

        <!-- below android 3.x -->
        <item name="actionBarStyle">@style/TTPActionBarStyle</item>
