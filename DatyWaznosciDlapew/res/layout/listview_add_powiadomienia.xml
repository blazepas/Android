<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/testTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przypomnienie " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right" >

            <EditText
                android:id="@+id/przypTextBox"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="number|textNoSuggestions" >

                <requestFocus />
            </EditText>

            <Spinner
                android:id="@+id/przypSpinner"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:entries="@array/array_date" />

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/removePrzypButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="Godzina: " />

        <Button
            android:id="@+id/godzButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="14:00" />

        <Button
            android:id="@+id/addPrzypButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" />

    </LinearLayout>

</LinearLayout>