<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <com.mareklatuszek.utilities.TextViewBariol
            android:id="@+id/testTxt"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Przypomnienie"
            android:textAppearance="@style/TPP.Small.TextAppearance"
            android:textColor="@color/dark_text_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.mareklatuszek.utilities.EditTextBariol
                android:id="@+id/przypTextBox"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:gravity="center"
                android:hint="np. 3"
                android:inputType="number|textNoSuggestions"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

            <LinearLayout
                android:id="@+id/przypDropDown"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/new_prod_clicable"
                android:gravity="center_vertical"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/removePrzypButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <com.mareklatuszek.utilities.TextViewBariol
            android:id="@+id/nazwaTxtList"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="bottom"
            android:text="Godzina"
            android:textAppearance="@style/TPP.Small.TextAppearance"
            android:textColor="@color/dark_text_view"
            android:textColorHint="@color/dark_text_view" />

        <Button
            android:id="@+id/godzButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="97dp"
            android:layout_height="48dp"
            android:text="14:00" />

        <Button
            android:id="@+id/addPrzypButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:text="+" />

    </LinearLayout>

</LinearLayout>