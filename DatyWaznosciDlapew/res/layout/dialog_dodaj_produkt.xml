<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/products_dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp" >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/scanInfoArea"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_dialog_scan_info"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/infoIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pick_info_menu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_dialog_scan"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <pl.mareklatuszek.tpp.views.TextViewBariol
                        android:id="@+id/TextViewBariol01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.59"
                        android:gravity="center"
                        android:text="Skanowanie produktu"
                        android:textAppearance="@style/TPP.Large.TextAppearance"
                        android:textColor="@color/light_text_view" />

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/customInfoArea"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_dialog_add_info"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pick_info_menu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_dialog_add"
                android:gravity="center"
                android:orientation="vertical" >

                <pl.mareklatuszek.tpp.views.TextViewBariol
                    android:id="@+id/estimateTimeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.34"
                    android:gravity="center"
                    android:text="WÅ‚asny produkt"
                    android:textAppearance="@style/TPP.Large.TextAppearance"
                    android:textColor="@color/light_text_view" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>