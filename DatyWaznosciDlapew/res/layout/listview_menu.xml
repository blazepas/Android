<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/okresWazLay"
    android:layout_width="match_parent"
    android:layout_height="?attr/dropdownListPreferredItemHeight"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/menu_row_height"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="@dimen/menu_icon"
            android:layout_height="@dimen/menu_icon"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/menu_icon"
                android:layout_height="@dimen/menu_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/collections_cloud" />

        </LinearLayout>

        <pl.mareklatuszek.tpp.views.TextViewBariol
            android:id="@+id/actionBarTitle"
            style="?attr/spinnerDropDownItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Fragment"
            android:textAppearance="@style/TPP.Menu.TextAppearance" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="6dp"
        android:layout_height="9dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/image_menu_arrow" />

</RelativeLayout>