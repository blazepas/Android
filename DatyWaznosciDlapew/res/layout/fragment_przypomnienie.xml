<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <views.TextViewBariol
        android:id="@+id/nazwaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textAllCaps="true"
        android:textAppearance="@style/TPP.XLarge.TextAppearance"
        android:textColor="@color/medium_text_view" />

    <views.TextViewBariol
        android:id="@+id/kategoriaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAllCaps="true"
        android:textAppearance="@style/TPP.Normal.TextAppearance"
        android:textColor="@color/medium_text_view" />

    <views.TextViewBariol
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Okres ważności mija za:"
        android:textAppearance="@style/TPP.Normal.TextAppearance"
        android:textColor="@color/dark_text_view" />

    <RelativeLayout
        android:id="@+id/progressLay"
        android:layout_width="220dp"
        android:layout_height="54dp" >
    </RelativeLayout>

    <views.TextViewBariol
        android:id="@+id/estimateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAllCaps="true"
        android:textAppearance="@style/TPP.Large.TextAppearance"
        android:textColor="@color/alarm_light_text" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <views.TextViewBariol
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Data ważności"
            android:textAppearance="@style/TPP.Normal.TextAppearance"
            android:textColor="@color/dark_text_view" />

        <views.TextViewBariol
            android:id="@+id/dataOtwTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:textAppearance="@style/TPP.Normal.TextAppearance"
            android:textColor="@color/alarm_light_text" />

        <views.TextViewBariol
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="15dp"
            android:text="Termin ważności"
            android:textAppearance="@style/TPP.Normal.TextAppearance"
            android:textColor="@color/dark_text_view" />

        <views.TextViewBariol
            android:id="@+id/terminWazTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textAppearance="@style/TPP.Normal.TextAppearance"
            android:textColor="@color/alarm_light_text" />

    </RelativeLayout>

</LinearLayout>