<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dodatkowe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20ffffff"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dodaj_sections_height"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.mareklatuszek.utilities.TextViewBariol
                android:id="@+id/textView3"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Data otwarcia"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <com.mareklatuszek.utilities.EditTextBariol
                android:id="@+id/dataOtwTxtBox"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@drawable/edittext_background"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="2013-11-14"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dodaj_sections_height"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/terminWazInfoImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/info" />

            <com.mareklatuszek.utilities.TextViewBariol
                android:id="@+id/textView7"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Termin ważności"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <com.mareklatuszek.utilities.EditTextBariol
                android:id="@+id/terminWazTextBox"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@drawable/edittext_background"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="Wprowadź datę"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dodaj_sections_height"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical" >

            <com.mareklatuszek.utilities.TextViewBariol
                android:id="@+id/textView5"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Kategoria"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <LinearLayout
                android:id="@+id/kategorieDropDown"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/new_prod_clicable"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

            </LinearLayout>

            <ImageView
                android:id="@+id/kategroieImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pick_category" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dodaj_sections_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dataZuzInfoImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/info" />

            <com.mareklatuszek.utilities.TextViewBariol
                android:id="@+id/TextView01"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Data zużycia"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <com.mareklatuszek.utilities.EditTextBariol
                android:id="@+id/dataZuzTextBox"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@drawable/edittext_background"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/przypomnieniaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.mareklatuszek.utilities.EditTextBariol
                android:id="@+id/opisTxtBox"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Opis..." />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
