<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dodatkowe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20ffffff"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodaj_sections_height"
            android:layout_marginBottom="@dimen/add_row_margin_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <pl.jacek.jablonka.android.tpp.views.TextViewBariol
                android:id="@+id/textView3"
                android:layout_width="@dimen/add_textview_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/tv_open_date"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <pl.jacek.jablonka.android.tpp.views.EditTextBariol
                android:id="@+id/dataOtwTxtBox"
                android:layout_width="@dimen/add_edittext_dataotw_width"
                android:layout_height="@dimen/editbox_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittext_back"
                android:drawablePadding="-4dp"
                android:drawableRight="@drawable/ic_calendar"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:paddingRight="2dp"
                android:text="2013-11-14"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dodaj_sections_height"
            android:layout_marginBottom="@dimen/add_row_margin_bottom"
            android:gravity="center_vertical" >

            <pl.jacek.jablonka.android.tpp.views.TextViewBariol
                android:id="@+id/textView5"
                android:layout_width="@dimen/add_textview_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/tv_category"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <pl.jacek.jablonka.android.tpp.views.CustomSpinner
                android:id="@+id/kategorieDropDown"
                android:layout_width="@dimen/add_spinner_kategoria_width"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginLeft="-5dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/kategroieImage"
                android:layout_width="@dimen/add_button_normal_width"
                android:layout_height="@dimen/add_button_normal_height"
                android:src="@drawable/button_kategorie" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_row_margin_bottom"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dodaj_sections_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dataZuzInfoImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/pick_info" />

            <pl.jacek.jablonka.android.tpp.views.TextViewBariol
                android:id="@+id/TextView01"
                android:layout_width="@dimen/add_textview_width"
                android:layout_height="wrap_content"
                android:text="@string/tv_consump_date"
                android:textAppearance="@style/TPP.Small.TextAppearance"
                android:textColor="@color/dark_text_view" />

            <pl.jacek.jablonka.android.tpp.views.EditTextBariol
                android:id="@+id/dataZuzTextBox"
                android:layout_width="150dp"
                android:layout_height="@dimen/editbox_height"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittext_back"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:textAppearance="@style/TPP.Normal.TextAppearance"
                android:textColor="@color/dark_text_view"
                android:textColorHint="@color/new_prod_hint" />

        </LinearLayout>
        
        <pl.jacek.jablonka.android.tpp.views.CustomViewPrzypomnienia
                android:id="@+id/przypomnieniaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <pl.jacek.jablonka.android.tpp.views.EditTextBariol
                android:id="@+id/opisTxtBox"
                style="@style/TPP.Normal.EditTextAppearance"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:ems="10"
                android:hint="@string/hint_discription"
                android:inputType="textMultiLine"
              	android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>