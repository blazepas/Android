<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/categories_header_height"
        android:background="@color/categories_header"
        android:gravity="center" >

       	<views.EditTextBariol
       	    android:id="@+id/categoryTxtBoxKat"
       	    android:layout_width="@dimen/categories_editbox_width"
       	    android:layout_height="@dimen/categories_editbox_height"
       	    android:background="@drawable/edittext_back"
       	    android:ems="10"
       	    android:gravity="center"
       	    android:hint="WPISZ NAZWÄ˜ KATEGORII"
       	    android:textAppearance="@style/TPP.Normal.TextAppearance"
       	    android:textColor="@color/dark_text_view"
       	    android:textColorHint="@color/hint" />

       	<ImageView
       	    android:id="@+id/addCat"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_marginLeft="10dp"
       	    android:src="@drawable/button_dodaj_kat" />

    </LinearLayout>

    <ListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00ffffff" >

    </ListView>

</LinearLayout>